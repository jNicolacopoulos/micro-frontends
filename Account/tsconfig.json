{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./build",
        "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}
